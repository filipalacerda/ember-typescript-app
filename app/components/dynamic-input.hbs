<fieldset class="fieldset">
  <label for="value" class="label">
    Value:
  </label>
  {{#if this.isTextInput}}
    <Input
      aria-labelledby=""
      @type="text"
      {{on "input" this.handleInputValueChange}}
      class="input"
      data-test-text-input
    />

  {{else if this.isCheckbox}}
    <div class="checkboxes" data-test-checkboxes>
      {{#each @values as |value|}}
        <label for={{value}}>{{value}}</label>
        <Input
          @type="checkbox"
          {{on "change" this.onCheckboxChange}}
          @value={{value}}
          name={{value}}
          id={{value}}
        />
      {{/each}}
    </div>
  {{else if this.isSelect}}
    <select
      aria-labelledby=""
      {{on "change" this.handleInputValueChange}}
      class="input"
      data-test-select-input
    >
      <option>Choose Value</option>
      {{#each @values as |value|}}
        <option value={{value}}>
          {{value}}
        </option>
      {{/each}}
    </select>
  {{/if}}
</fieldset>